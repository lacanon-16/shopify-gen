{% comment %}
  Shopify Wishlist
  Usage:
    - Markup: {%- render 'button-wishlist', product: product -%}
  Parameters:
    - product: <Shopify product> (required)
{% endcomment %}

{%- if product.handle != blank -%}
  <button type="button" aria-label="Add to wishlist" class="button--style__wishlist" button-wishlist data-product-handle="{{ product.handle }}">
    {%- render 'icon-heart' -%}
  </button>
{%- endif -%}