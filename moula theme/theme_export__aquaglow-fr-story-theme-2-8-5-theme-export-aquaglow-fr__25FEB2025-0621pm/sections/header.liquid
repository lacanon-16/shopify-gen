{%- style -%}
  {%- if section.settings.header_background_behavior != "normal" -%}
    main>*:first-child.section-banner {
      margin-top: calc(-1 * var(--header-height));
    }
  {%- endif -%}
  
  .header {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    transition: 0.25s ease all;
  }

  .section-header {
    position: sticky; /* This is for fixing a Safari z-index issue. PR #2147 */
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .header__heading-logo {
    max-width: {{ section.settings.logo_width_mobile }}px;
  }

  .header__logo--small {
    width: 80%;
  }

  .header__padding--large {
    padding: 20px 50px; 
  }
  
  .header__padding--small {
    padding: 5px 50px!important;
  }
  
  @media (max-width: 768px) {
    .header__padding--large {
      padding: 20px 15px;
    }

    .header__padding--small {
      padding: 3px 15px!important;
    }
  }

  .header__top {
    top: 0!important;
  }

  {%- if section.settings.logo == blank -%}
    .header__heading-link .h2 {
      font-size: {{ section.settings.logo_width | divided_by: 60.0 }}rem;
    }
  {%- endif -%}

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }

    {%- if section.settings.logo == blank -%}
      .header__heading-link .h2 {
        font-size: {{ section.settings.logo_width | divided_by: 50.0 }}rem;
      }
    {%- endif -%}

    .header__heading-logo {
      max-width: {{ section.settings.logo_width }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

