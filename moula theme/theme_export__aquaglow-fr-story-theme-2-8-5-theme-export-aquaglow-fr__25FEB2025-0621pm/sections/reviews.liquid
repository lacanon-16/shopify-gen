    {
      "type": "checkbox",
      "id": "loop",
      "label": "t:sections.reviews.loop.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "navigation",
      "label": "t:sections.reviews.navigation.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "t:sections.reviews.pagination.label",
      "default": true
    },
    {
      "type": "checkbox",
