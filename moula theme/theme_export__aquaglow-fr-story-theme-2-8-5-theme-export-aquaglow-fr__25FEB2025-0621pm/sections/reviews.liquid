{{ 'component-reviews.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign sectionId = section.id | remove: '-'
  assign enable_animations = section.settings.enable_animations
  assign animation = section.settings.animation
  assign layout = section.settings.layout

  if section.settings.preshot_swiper and layout == 'swiper'
    assign slidesPerViewDesktop = section.settings.slides_on_desktop | plus: 0.4
    assign slidesPerViewTablet = section.settings.slides_on_tablet | plus: 0.4
    assign slidesPerViewMobile = section.settings.slides_on_mobile | plus: 0.4
  else
    assign slidesPerViewDesktop = section.settings.slides_on_desktop
    assign slidesPerViewTablet = section.settings.slides_on_tablet
    assign slidesPerViewMobile = section.settings.slides_on_mobile
  endif

  assign bgImage = section.settings.image_bg_colored
  assign bgImageMobile = section.settings.image_bg_colored_mobile
  if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank
    render 'cut-colored'
  endif
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #reviews__{{ sectionId }} .reviews__grid .reviews__block:nth-child(-n+{{ section.settings.visible_grid_blocks }}) {
    display: block;
  }
{%- endstyle -%}

{%- render 'separator-top', section: section -%}

<div
  id="{{ section.settings.section_id }}"
  class="color-{{ section.settings.color_palette }} section-{{ section.id }}-padding{% if section.settings.enable_cut_bg_color or bgImage != blank or bgImageMobile != blank %} cut-colored-section{% endif %}"
  data-section-id="{{ section.id }}"
>
  <div class="container container--{{ section.settings.layout_width }}">
    {%- liquid
      for block in section.blocks
        if block.type == "picto"
          render "pictogram", block: block
        endif
      endfor
    -%}
    
    <div class="reviews">
      {%- liquid
         if section.settings.write_review_enable
          assign alignement = 'medium-up-left small-' | append: section.settings.alignment
        else
          assign alignement = section.settings.alignment
        endif
      -%}
      <div class="reviews__header{% if section.settings.write_review_enable %}--flex{% endif %}">
        {%- if section.settings.heading != blank -%}
          {%- render 'heading',
            alignment: alignement,
            enable_animations: section.settings.enable_animations,
            animation: section.settings.animation,
            subheading: section.settings.subheading,
            heading: section.settings.heading,
            description: section.settings.description,
            heading_class: 'video__heading',
            heading_style: section.settings.heading_style
          -%}
        {%- endif -%}

        {%- if section.settings.write_review_enable -%}
          {{- 'section-contact-form.css' | asset_url | stylesheet_tag -}}
          <details-modal>
            <details class="reviews__write-review {{ section.settings.alignment }}">
              <summary class="focus-inset modal__toggle" aria-haspopup="dialog" aria-label="{{ section.settings.write_review_title | escape }}">
                <span class="summary__title" {%- render 'animation', enable_animations: enable_animations, animation: animation -%}>
                  {{ section.settings.write_review_title }}
                  {% render 'icon-caret', behavior: settings.collapsible_icon %}
                </span>
              </summary>
              <div class="modal__content modal__content--center" role="dialog" aria-modal="true" aria-label="{{ section.settings.write_review_title | escape }}">
                <div class="modal-overlay"></div>
                <div class="modal-wrapper" tabindex="-1">
                  <button type="button" class="modal__close-button link link--text focus-inset" aria-label="{{ 'accessibility.close' | t }}">
                    <svg class="icon icon-close" aria-hidden="true" focusable="false">
                      <use href="#icon-close">
                    </svg>
                  </button>
                  <div class="color-{{ section.settings.write_review_color_palette }} reviews__write-form">
                    {%- form 'contact', id: 'ContactForm', class: 'isolate', return_to: 'back' -%}
                      {%- if form.posted_successfully? -%}
                        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
                          {% render 'icon-success' %}
                          {{ section.settings.success_message }}
                        </h2>
                      {%- elsif form.errors -%}
                        <div class="form__message">
                          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                            {% render 'icon-error' %}
                            {{ 'templates.contact.form.error_heading' | t }}
                          </h2>
                        </div>
                        <ul class="form-status-list caption-large" role="list">
                          <li>
                            <a href="#ContactForm-email" class="link">
                              {{ form.errors.translated_fields.email | capitalize }}
                              {{ form.errors.messages.email }}
                            </a>
                          </li>
                        </ul>
                      {%- endif -%}
      
                      <div class="contact__fields">
                        <div class="field">
                          <input
                            class="field__input"
                            autocomplete="name"
                            type="text"
                            id="ContactForm-name"
                            name="contact[{{ 'templates.contact.form.name' | t }}]"
                            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                            placeholder="{{ 'templates.contact.form.name' | t }}"
                          >
                          <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
                        </div>
                        <div class="field field--with-error">
                          <input
                            autocomplete="email"
                            type="email"
                            id="ContactForm-email"
                            class="field__input"
                            name="contact[email]"
                            spellcheck="false"
                            autocapitalize="off"
                            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                            aria-required="true"
                            {% if form.errors contains 'email' %}
                              aria-invalid="true"
                              aria-describedby="ContactForm-email-error"
                            {% endif %}
                            placeholder="{{ 'templates.contact.form.email' | t }}"
                          >
                          <label class="field__label" for="ContactForm-email">
                            {{- 'templates.contact.form.email' | t }}
                            <span aria-hidden="true">*</span></label
                          >
                          {%- if form.errors contains 'email' -%}
                            <small class="contact__field-error" id="ContactForm-email-error">
                              <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                              <span class="form__message">
                                {%- render 'icon-error' -%}
                                {{- form.errors.translated_fields.email | capitalize }}
                                {{ form.errors.messages.email -}}
                              </span>
                            </small>
                          {%- endif -%}
                        </div>
                      </div>
      
                      <div class="review_star_container">
                        <div class="review_star_label">
                          <p>{{ section.settings.write_review_label }}</p>
                        </div>
                        <label for="ContactFormRate1-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate1-{{ section.id }}" name="contact[note]" value="1/5"
                          ><span>1/5</span></label
                        >
                        <label for="ContactFormRate2-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate2-{{ section.id }}" name="contact[note]" value="2/5"
                          ><span>2/5</span></label
                        >
                        <label for="ContactFormRate3-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate3-{{ section.id }}" name="contact[note]" value="3/5"
                          ><span>3/5</span></label
                        >
                        <label for="ContactFormRate4-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate4-{{ section.id }}" name="contact[note]" value="4/5"
                          ><span>4/5</span></label
                        >
                        <label for="ContactFormRate5-{{ section.id }}"
                          ><input type="radio" id="ContactFormRate5-{{ section.id }}" name="contact[note]" value="5/5" checked
                          ><span>5/5</span></label
                        >
                      </div>
      
                      <div class="field">
                        <textarea
                          rows="10"
                          id="ContactForm-body"
                          class="text-area field__input"
                          name="contact[{{ 'templates.contact.form.comment' | t }}]"
                          placeholder="{{ 'templates.contact.form.comment' | t }}"
                        >
                        {{- form.body -}}
                      </textarea>
                        <label class="form__label field__label field__label--from-textarea" for="ContactForm-body">
                          {{- 'templates.contact.form.comment' | t -}}
                        </label>
                      </div>
                      <div class="contact__button button__container">
                        <button type="submit" class="button button__style--{{ section.settings.button_style }}">
                          {{ section.settings.button_text }}
                        </button>
                      </div>
                    {%- endform -%}
                  </div>
                </div>
              </div>
            </details>
          </details-modal>
        {%- endif -%}
      </div>

      <div class="reviews__wrapper-swiper">
        <div
          id="reviews__{{ sectionId }}"
          class="swiper{% if layout == 'swiper' %} reviews__swiper{% unless section.settings.pagination %} swiper_no_pagination{% endunless %}{% endif %}"
          {%- if layout == 'swiper' %}
            {% render 'swiper-data-editor', numberOfSlides: section.blocks.size %}
          {% endif -%}
        >
          <div class="{% if layout == 'masonry' %}reviews__grid swiper__wrapper--{{ slidesPerViewMobile }}-phone swiper__wrapper--{{ slidesPerViewTablet }}-tablet swiper__wrapper--{{ slidesPerViewDesktop }}-desktop{% else %}swiper-wrapper{% endif %}">
            {%- for block in section.blocks -%}
              <div
                class="{% if layout == "swiper" %}swiper-slide {% endif %}reviews__block"
                {%- render 'animation', enable_animations: enable_animations, animation: animation -%}
                {{ block.shopify_attributes }}
              >
                <div class="content-container">
                  {%- render 'reviews__blocks',
                    type: block.type,
                    height: section.settings.height,
                    image: block.settings.image,
                    video: block.settings.video,
                    heading: block.settings.heading,
                    description: block.settings.description,
                    name: block.settings.name,
                    rating: block.settings.stars_rating,
                    enable_rating: section.settings.enable_rating,
                    stars_style: section.settings.stars_style,
                    verified: block.settings.verified,
                    unique: block.id
                  -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
          {%- if layout == 'masonry' and section.blocks.size > section.settings.visible_grid_blocks -%}
            <div
              class="reviews__button"
              {%- render 'animation', enable_animations: enable_animations, animation: animation -%}
            >
              <button class="button button__style--{{ section.settings.button_show_all_style }} reviews__show-all-blocks">
                {{ section.settings.button_show_all_text }}
              </button>
            </div>
          {%- endif -%}
        </div>

        {%- liquid
          if layout == 'swiper'
            assign swiperAutoplayDelay = section.settings.speed | times: 1000
            assign swiperAutoplay = 'autoplay: { pauseOnMouseEnter: true, enabled: ' | append: section.settings.autoplay | append: ', delay:' | append: swiperAutoplayDelay | append: '},'
            assign swiperEl = "'#reviews__" | append: sectionId | append: "'"
            if section.settings.loop and settings.swiper_pagination_style == "none"
              assign swiperLoop = "loop: true"
            else
              assign swiperLoop = "loop: false"
            endif
            assign swiperOptions = swiperLoop | append: ",mousewheel:{forceToAxis:true},spaceBetween:" | append: settings.spacing_grid_horizontal | append: ",slidesPerView:" | append: slidesPerViewMobile | append: ",autoHeight:true," | append: swiperAutoplay | append: "breakpoints:{750:{slidesPerView:" | append: slidesPerViewTablet | append: ",},1150:{slidesPerView:" | append: slidesPerViewDesktop | append: ",}},"
            render 'swiper-theme-editor', sectionId: sectionId, swiperVariant: 'reviews__', swiperEl: swiperEl, swiperOptions: swiperOptions, navigation: section.settings.navigation, pagination: section.settings.pagination
          endif
        -%}

        <script>
          {%- if layout == 'masonry' and section.blocks.size > section.settings.visible_grid_blocks -%}
            const toggleAllReviews__{{ sectionId }} = () => {
              const getAllReviewsBlocks__{{ sectionId }} = document.querySelectorAll('#reviews__{{ sectionId }} .reviews__block');
              const showAllBlocksButton__{{ sectionId }} = document.querySelector('#reviews__{{ sectionId }} .reviews__show-all-blocks');
              showAllBlocksButton__{{ sectionId }}.addEventListener('click', (e) => {
                getAllReviewsBlocks__{{ sectionId }}.forEach(b => b.style.display = "block");
                e.target.style.display = "none";
              });
            }
            toggleAllReviews__{{ sectionId }}();
            document.addEventListener("shopify:section:load", toggleAllReviews__{{ sectionId }});
            document.addEventListener("shopify:section:unload", toggleAllReviews__{{ sectionId }});
          {%- endif -%}

          {%- if section.settings.enable_plus_less -%}
            function toggleDescription(blockId) {
              var shortDesc = document.querySelector('#description-' + blockId + ' .short-description');
              var fullDesc = document.querySelector('#description-' + blockId + ' .full-description');
              var button = document.querySelector('#description-' + blockId + ' .toggle-description');
            
              if (fullDesc.style.display === 'none') {
                fullDesc.style.display = 'inline';
                shortDesc.style.display = 'none';
                button.textContent = '{{ section.settings.less }}';
              } else {
                fullDesc.style.display = 'none';
                shortDesc.style.display = 'inline';
                button.textContent = '{{ section.settings.plus }}';
              }
  
              if (reviews__{{ sectionId }}) {
                reviews__{{ sectionId }}.update();
              }
            }
          {%- endif -%}
        </script>
      </div>
    </div>
  </div>
</div>

{%- render 'separator-bottom', section: section -%}

{% schema %}
